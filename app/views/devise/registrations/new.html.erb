  
 <script type="text/javascript">
  $(document).ready(function() {
    $(':input[type="submit"]').prop('disabled', true);

        $('#name_field').keyup(function(){
          if($('#name_field').val() !== '' && $('#mail_field').val() !== ''){
            $(':input[type="submit"]').prop('disabled', false);
          }
        });

        $('#mail_field').keyup(function(){
          if($('#name_field').val() !== '' && $('#mail_field').val() !== ''){
            $(':input[type="submit"]').prop('disabled', false);
          }
        });

        $('#pwd, #cfrm_pwd').keyup(function(){
          if($('#pwd').val() !== '' && $('#cfrm_pwd').val() !== ''){
            $(':input[type="submit"]').prop('disabled', false);
          }
        });

        $('#pwd, #cfrm_pwd').on('keyup', function () {
        if ($('#pwd').val() == $('#cfrm_pwd').val()) {
          $('#message').html('Matching').css('color', 'green');
        } else 
          $('#message').html('Not Matching').css('color', 'red');
        });
  });
  </script>

    <div class="container mt-4">
      <div class="row" >
       <div class="col-4" >
       </div>
       <div class="col-5" >
        <h2 class="text-primary text-center">Sign up</h2>
        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :name, autofocus: true, autocomplete: "Name", placeholder: "Name", id: :name_field, required: true %>
        </div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com", id: :mail_field, required: true %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "atleast six digits", required: true, id: :pwd %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "atleast six digits", required: true, id: :cfrm_pwd %>
          <span id="message"></span>
        </div>

        <div class="field">
          <%= f.collection_radio_buttons :role, User.roles, :first, :first, required: true %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class => "btn btn-outline-secondary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
       <div class="col-3" >
      </div> 
      </div>
    </div> 
