

<script type="text/javascript">
    $(document).ready(function() {
      $(':input[type="submit"]').prop('disabled', true);

      $('#mail_field').keyup(function(){
        if($('#mail_field').val() !== ''  ){
          $(':input[type="submit"]').prop('disabled', false);
        }
      });
    });
</script>

  <div class="container mt-4">
    <div class="row">
      <div class="col-4"></div>
      <div class="col-4">
        <h4 class="text-primary text-center">Forgot your password?</h4>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mt-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com", :class => "form-control", id: :mail_field %>
          </div>
          <div class="actions">
            <br>
            <%= f.submit "Send me reset password instructions", :class => "btn btn-outline-primary" %>
          </div><br>
        <% end %>
        <p class="text-danger">
          Kindly type the registered email to find your account.
        </p>

        <%= render "devise/shared/links" %>
      </div>
      <div class="col-4"></div>
    </div>  
  </div>