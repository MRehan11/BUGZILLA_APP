
<%= bootstrap_form_with(model: @bug, url: [@project, @bug], local: true) do |f| %>
  <%= f.text_field :title, placeholder: "title...", required: true, id: :bug_title %>
  <%= f.text_area :description, placeholder: "description...", required: true, id: :bug_description %>
  <%= f.file_field :screenshot %>
  <%= f.date_field :start_date, min: Date.today, as: :date_time_picker, required: true, input_html: {data: {date_formate: "YYYY-MM-DD"}} %>
  <%= f.collection_select(:user_id, User.developer, :id, :name, {prompt: "Select Developers" }, { class: "form-control", required: true, id: :select_user } )  %>
  <%= f.select(:status, Bug.statuses.keys.map { |k| [k.humanize, k] }, {prompt: "Select Status" }, {class: "form-control", required: true} ) %>
  <%= f.submit %>
<% end %>