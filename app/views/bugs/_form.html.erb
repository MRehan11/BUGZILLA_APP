
<%= bootstrap_form_with(model: @bug, url: [@project, @bug], local: true) do |f| %>
  <%= f.text_field :title, placeholder: "title..." %>
  <%= f.text_area :description, placeholder: "description..." %>
  <%= f.file_field :screenshot %>
  <%= f.date_field :start_date, as: :date_time_picker, input_html: {data: {date_formate: "YYYY-MM-DD"}} %>
  <%= f.collection_select(:user_id, User.developer, :id, :name, {prompt: "Select Developer" }, { class: "form-control" } )  %>
  <%= f.select(:status, Bug.statuses.keys, {prompt: "Select Status" }, { class: "form-control" } ) %>
  <%= f.submit %>
<% end %>