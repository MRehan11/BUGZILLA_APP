  
  
  <script>
    $(document).ready(function() {

      $(':input[type="submit"]').prop('disabled', true);
      $('input[type="text"]').keyup(function() {
          if($(this).val() != '') {
            $(':input[type="submit"]').prop('disabled', false);
          }
      });

    });
  </script>

  <%= bootstrap_form_with(model: @project,  local: true, label_errors: true, inline_errors: true) do |f| %>
    <%= f.text_field :title, required: true %>
    <%= f.text_field :description, required: true %>
    <%= f.collection_select(:user_ids, User.developer, :id, :name, {prompt: "Select Developers" }, {:multiple => true})%>
    <%= f.submit %>
  <% end %>