  
  
  <div class="mt-4">
    <%= render_breadcrumbs :separator => ' / '%>
  </div>
  <div class="container mt-4">
    <div class="row"></div>
    <div class="row">
      <div class="col-6 text-left">
      <h3 class="text-primary">All Projects</h3>
      </div>
      <div class="col-6 text-right">
        <% if can? :manage, Project%>
          <%=link_to "Add New Project", new_project_path, :class => "btn btn-outline-primary" %>
        <%end %> 
      </div>
    </div>
  </div>

  <div class="container text-center mt-4">
    <div class="row">
    </div>
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Project Name</th>
          <th scope="col">Manager</th>
          <th scope="col">View</th>
          <% if can? :manage, Project %>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
          <%end %>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr class="text-primary">
            <td><%= project.title %></td>
            <td><%= project.creator.name.capitalize %></td>
            <td>
              <%=link_to "view", project_path(project), :class => "btn btn-outline-dark" %>
            </td>
            <% if can? :manage, project %>
              <td>
                <%=link_to "edit", edit_project_path(project), :class => "btn btn-outline-dark"  %>  
              </td>
              <td>
                <%=link_to "delete", project_path(project), method: :delete, :class => "btn btn-outline-danger"  %>
              </td>
            <% end %>  
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  