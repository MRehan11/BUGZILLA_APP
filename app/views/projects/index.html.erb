<div class="container text-center">
  <div class="row">
    <h1 class="col-9" style="padding-left: 6em">All Projects</h1>
    <% if current_user.manager? %>
      <%=link_to "Create Project", new_project_path, :class => 'btn btn-light col-2' %>
    <% end %>
  </div>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Project Name</th>
        <th scope="col">Manager</th>
        <th scope="col">View</th>
        <% if current_user.manager? %>
          <th scope="col">Update</th>
          <th scope="col">Delete</th>
        <%end %>  
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.creator.name.capitalize %></td>
          <td>
            <%=link_to "show", project_path(project)  %>
          </td>
           <% if current_user.manager? %>
            <td>
              <%=link_to "edit", edit_project_path(project)  %>  
            </td>
            <td>
              <%=link_to "delete", project_path(project), method: :delete  %>
            </td>
          <% end %>  
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  