  
  
  <div class="row">
    <div class="col-sm">
     <h3 class="text-primary" style="padding-left: 6em">All Projects</h3>
    </div>
    <div class="col-sm">
      <% if can? :manage, Project%>
        <%=link_to "Add New Project", new_project_path, :class => "btn btn-outline-primary" %>
      <%end %> 
    </div>
  </div>

  <div class="container text-center">
    <div class="row">
    </div>
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Project Name</th>
          <th scope="col">Manager</th>
          <th scope="col">View</th>
          <% if can? :manage, Project %>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
          <%end %>  
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.creator.name.capitalize %></td>
            <td>
              <%=link_to "view", project_path(project), :class => "btn btn-outline-primary" %>
            </td>
            <% if can? :manage, project %>
              <td>
                <%=link_to "edit", edit_project_path(project), :class => "btn btn-outline-warning"  %>  
              </td>
              <td>
                <%=link_to "delete", project_path(project), method: :delete, :class => "btn btn-outline-danger"  %>
              </td>
            <% end %>  
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  